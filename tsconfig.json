{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [  
    "next-env.d.ts",
  "**/*.ts",
  "**/*.tsx",
  "**/__tests__/*.ts",
  "**/__tests__/*.tsx",
  ".next/types/**/*.ts", "__tests__/example.test.js"],
  
  "exclude": ["node_modules"]
}